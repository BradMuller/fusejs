<div id="testlog"></div>
<!-- Log output end -->

<!-- HTML Fixtures start -->
<%= @html_fixtures %>
<!-- HTML Fixtures end -->

<script type="text/javascript">
  eventResults.endOfDocument = true;
</script>
</body>
</html>